# Jamfile for Calculator

SubDir TOP ;

SRCS = Calculator.cpp ;

# Assume that CalcLib is in a sibling directory.
# If it's installed elsewhere, you need to change this to point to it.
CALC_LIB_DIR = ../CalcLib ;

C.IncludeDirectories Calculator : $(CALC_LIB_DIR)/Code ;
C.LinkDirectories Calculator : $(CALC_LIB_DIR)/$(PLATFORM)-$(CONFIG) ;
C.LinkPrebuiltLibraries Calculator : CalcLib.$(CONFIG) ;
C.Application Calculator : $(SRCS) ;

# Jamfile for Calculator